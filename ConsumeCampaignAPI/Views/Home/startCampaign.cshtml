@model ConsumeCampaignAPI.Models.CampaignModel

@{
    ViewData["Title"] = "startCampaign";
}

<h1>Login</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="startCampaign">
            <div class="form-group">
                <label asp-for="Company" class="control-label">Company: </label>
                <input asp-for="Company" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="CampaignName" class="control-label">Campaign name: </label>
                <input asp-for="CampaignName" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start date: </label>
                <input asp-for="StartDate" class="form-control" required>
            </div>
            <br />
            <div class="form-group">
                <input type="Submit" value="Start" class="btn btn-primary" />
            </div>

        </form>
    </div>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
</div>
