@model ConsumeCampaignAPI.Models.GetCsvModel

@{
    ViewData["Title"] = "getCsvReport";
}

<h1>Login</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="getCsvReport">
            <div class="form-group">
                <label asp-for="CampaignId" class="control-label">Campaign Id: </label>
                <input asp-for="CampaignId" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="CurrentDate" class="control-label">Date: </label>
                <input asp-for="CurrentDate" class="form-control" required>
            </div>
            <br />
            <div class="form-group">
                <input type="Submit" value="Download" class="btn btn-primary" />
            </div>

        </form>
    </div>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
</div>
